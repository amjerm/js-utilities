{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["dom", "ES2017"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "./tsc/",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
